# Production Environment Configuration
ENVIRONMENT=production

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://dharsan-voice-agent-frontend.vercel.app,https://voice-agent-frontend.vercel.app,https://voice-agent.com,https://www.voice-agent.com

# Server Configuration
SERVER_ADDRESS=:8080
LOG_LEVEL=info

# Security Configuration
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/ssl/certs/server.crt
SSL_KEY_PATH=/etc/ssl/private/server.key

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s

# WebRTC Configuration
ICE_SERVERS=stun:stun.l.google.com:19302,stun:stun1.l.google.com:19302

# Kafka Configuration
KAFKA_BROKERS=redpanda.voice-agent-phase5.svc.cluster.local:9092
KAFKA_TOPIC_AUDIO=voice-audio
KAFKA_TOPIC_EVENTS=voice-events

# Health Check
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=5s 