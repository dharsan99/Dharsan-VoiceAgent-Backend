# Backend Production Environment Configuration
# Copy this file to .env and update values with your production settings

# Environment
ENVIRONMENT=production

# Service Ports
ORCHESTRATOR_PORT=8004
MEDIA_SERVER_PORT=8001
STT_SERVICE_PORT=8000
TTS_SERVICE_PORT=5001
LLM_SERVICE_PORT=8003

# Service URLs (Replace with your production service URLs)
STT_SERVICE_URL=https://your-stt-service-domain.com
TTS_SERVICE_URL=https://your-tts-service-domain.com
LLM_SERVICE_URL=https://your-llm-service-domain.com
MEDIA_SERVER_URL=https://your-media-server-domain.com

# Database & Message Queue (Replace with production values)
REDIS_URL=redis://your-redis-cluster:6379
KAFKA_BROKERS=your-kafka-cluster:9092
REDPANDA_HOST=redpanda.voice-agent-phase5.svc.cluster.local
REDPANDA_PORT=9092

# LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.2:3b
SYSTEM_PROMPT="You are a professional AI assistant for voice interactions."

# STT Configuration
STT_MODEL=base

# TTS Configuration
TTS_VOICE=en-US-Neural2-A
TTS_LANGUAGE=en-US

# CORS Configuration (Replace with your production frontend URLs)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app-domain.com

# Security
ENABLE_HTTPS=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Google Cloud (Production credentials)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
GOOGLE_API_KEY=your_production_google_api_key

# Kafka Configuration
KAFKA_ENABLED=true

# Logging
LOG_LEVEL=warn

